<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      xml:lang="en"
>
  <body>

    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">

        <style>
          .pattern-demo .sizer,
          .pattern-demo .item {
              width: 33%;
          }
        </style>

        <h1 i18n:translate="">Masonry</h1>

        <article>
          <a class="pat-inject"
             href="https://raw.githubusercontent.com/Patternslib/Patterns/refs/heads/master/src/pat/masonry/documentation.md"
             data-pat-inject="
                 data-type: markdown;
                 source: ##Description;
                 target: self::element;
                 trigger: autoload;
             "
             i18n:translate=""
          >Description</a>
        </article>

        <div class="pattern-demo"
             id="demo"
        >
          <a class="pat-inject"
             href="https://raw.githubusercontent.com/Patternslib/Patterns/refs/heads/master/src/pat/masonry/index.html"
             data-pat-inject="
                 target: #demo;
                 trigger: autoload;
             "
             i18n:translate=""
          >Load demo</a>
        </div>

        <article>
          <a class="pat-inject"
             href="https://raw.githubusercontent.com/Patternslib/Patterns/refs/heads/master/src/pat/masonry/documentation.md"
             data-pat-inject="
                 data-type: markdown;
                 source: ##Documentation;
                 target: self::element;
                 trigger: autoload;
             "
             i18n:translate=""
          >Documentation</a>
        </article>

      </metal:content-core>
    </metal:content-core>

  </body>
</html>
